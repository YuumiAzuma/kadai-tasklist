<div class="row">
  <div class="col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-2 col-lg-6 col-lg-offset-3 col-xs-12">
<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
 <div class="alert alert-warning">
          <ul>
            <% task.errors.full_tasks.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>

    <div id="error_explanation">
      <ul>
        <% task.errors.full_tasks.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="form-group">
  <%= f.label :status, 'status' %>
  <%= f.text_field :status, class: 'form-control'  %>
   </div>

      <div class="form-group">
  <%= f.label :content, 'content' %>
  <%= f.text_field :content %>
  </div>
  


  <%= f.submit '投稿' %>
<% end %>
 </div>
</div>
